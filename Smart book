<body>

<div class="left">
    <h2>Your Notes</h2>
    <textarea id="note"></textarea>
    <br><br>
    <button onclick="saveNote()">Save Note</button>
</div>

<div class="right">
    <h2>Search Notes</h2>
    <input type="text" id="search" placeholder="Search keyword...">
    <button onclick="searchNote()">Search</button>
    <p id="status"></p>
</div>

<script>
function saveNote() {
    const content = document.getElementById("note").value;
    localStorage.setItem("savedNote", content);
    document.getElementById("status").textContent = "Note saved ✔️";
}

function searchNote() {
    const keyword = document.getElementById("search").value.toLowerCase();
    const saved = localStorage.getItem("savedNote") || "";

    if (saved.toLowerCase().includes(keyword)) {
        document.getElementById("note").value = saved; 
        document.getElementById("status").textContent = "Found ✔️ You can edit now!";
    } else {
        document.getElementById("status").textContent = "Not found ❌";
    }
}
</script>

</body>
